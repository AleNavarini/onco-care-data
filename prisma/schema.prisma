generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt  @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

model Patient {
  id              BigInt   @id @default(autoincrement())
  dni             String   
  name            String
  dateOfBirth     DateTime
  phone           String
  email           String
  address         String
  healthInsurance String
  clinicHistory   BigInt
}
